{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "./*" ],
      "@/components/*": ["src/components/*"],
      "@/constants/*": ["src/constants/*"],
      "@/providers/*": ["src/providers/*"],
      "@/hooks/*": ["src/hooks/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
